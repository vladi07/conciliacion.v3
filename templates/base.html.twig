<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" >
        <title>{% block title %}Conciliación{% endblock %}</title>
        {#<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">#}
        <style>
            body{
                background-image: url("{{ asset('img/logos/fondo-pantalla.png') }}");
            }
        </style>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <!-- Font Awesome -->
            <link rel="stylesheet" href="{{ asset('plugins/fontawesome-free/css/all.css') }}">
            <!-- Tempusdominus Bootstrap 4 -->
            <link rel="stylesheet" href="{{ asset('plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css') }}">
            <!-- iCheck -->
            <link rel="stylesheet" href="{{ asset('plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
            <!-- JQVMap -->
            <link rel="stylesheet" href="{{ asset('plugins/jqvmap/jqvmap.min.css') }}">
            <!-- overlayScrollbars -->
            <link rel="stylesheet" href="{{ asset('plugins/overlayScrollbars/css/OverlayScrollbars.min.css') }}">
            <!-- Daterange picker -->
            <link rel="stylesheet" href="{{ asset('plugins/daterangepicker/daterangepicker.css') }}">
            <!-- summernote -->
            <link rel="stylesheet" href="{{ asset('plugins/summernote/summernote-bs4.min.css') }}">
            <!-- Theme style -->
            <link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css') }}">
            <!-- Iconos de Bootstrap 4 -->
            <link rel="stylesheet" href="{{ asset('icons/bootstrap-icons.css') }}">
            <!-- SCC de los Charts -->
            <link rel="stylesheet" href="{{ asset('plugins/chart.js/Chart.min.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
            <script>
                $.widget.bridge('uibutton', $.ui.button)
            </script>
            <!-- jQuery -->
            <script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
            <!-- jQuery UI 1.11.4 -->
            <script src="{{ asset('plugins/jquery-ui/jquery-ui.min.js') }}"></script>
            <!-- Bootstrap 4 -->
            <script src="{{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
            <!-- ChartJS -->
            <script src="{{ asset('plugins/chart.js/Chart.min.js') }}"></script>
            <!-- Sparkline -->
            <script src="{{ asset('plugins/sparklines/sparkline.js') }}"></script>
            <!-- JQVMap -->
            <script src="{{ asset('plugins/jqvmap/jquery.vmap.min.js') }}"></script>
            <script src="{{ asset('plugins/jqvmap/maps/jquery.vmap.usa.js') }}"></script>
            <!-- jQuery Knob Chart -->
            <script src="{{ asset('plugins/jquery-knob/jquery.knob.min.js') }}"></script>
            <!-- daterangepicker -->
            <script src="{{ asset('plugins/moment/moment.min.js') }}"></script>
            <script src="{{ asset('plugins/daterangepicker/daterangepicker.js') }}"></script>
            <!-- Tempusdominus Bootstrap 4 -->
            <script src="{{ asset('plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js') }}"></script>
            <!-- Summernote -->
            <script src="{{ asset('plugins/summernote/summernote-bs4.min.js') }}"></script>
            <!-- overlayScrollbars -->
            <script src="{{ asset('plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js') }}"></script>
            <!-- AdminLTE App -->
            <script src="{{ asset('dist/js/adminlte.js') }}"></script>

            <!-- DEMO -->
            {#
            <script src="{{ asset('dist/js/demo.js') }}"></script>
            <script src="{{ asset('dist/js/pages/dashboard.js') }}"></script>
            #}
        {% endblock %}

    </head>

    <body class="hold-transition sidebar-mini sidebar-collapse layout-fixed">
        {# <div class="wrapper"> #}
            <!-- Preloader-->
            <div class="preloader flex-column justify-content-center align-items-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Cargando...</span>
                </div>
            </div>

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-primary navbar-dark bg-primary">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <!-- Boton de Navegación izquierdo  -->
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    <!-- Navbar Search -->
                    <li class="nav-item">
                        <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                            <i class="fas fa-search"></i>
                        </a>
                        <!-- Linea de Busqueda -->
                        <div class="navbar-search-block">
                            <form class="form-check-input">
                                <div class="input-group input-group">
                                    <input class="form-control form-control-navbar" type="search" placeholder="Buscar por CI" aria-label="Search">
                                    <div class="input-group-append">
                                        <button class="btn btn-navbar" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                        <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>
                <!-- Right navbar links -->
                <ul class="navbar-nav ml-auto">
                    <!-- Ver sistema en Pantalla Completa -->
                    <li class="nav-item">
                        <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                            <i class="fas fa-expand-arrows-alt"></i>
                        </a>
                    </li>

                    <!-- Panel de Usuario -->
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i>
                            <span class="mr-2 d-none d-lg-inline text-white">{{ app.user}}</span>
                        </a>
                        <!-- Dropdown - User Información -->
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="{{ path('usuario_show', {'id': app.user.id}) }}">
                                <i class="fas fa-user fa-sm fa-fw mr-2 text-black"></i>
                                Perfil
                            </a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-black"></i>
                                Cerrar Sesión
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-light-blue elevation-4">
                <!-- Brand Logo -->
                <a href="{{ path('principal') }}" class="brand-link">
                    <img src="{{ asset('img/logos/sca-vertical.jpeg') }}" class="brand-image img-circle elevation-3" width="200px">
                    {# <span class="brand-text font-weight-bold badge text-wrap">Sistema de Conciliación</span> #}
                    <h2 class="text-wrap text-center badge brand-text">SISTEMA DE CONCILIACIÓN</h2>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar PANEL DE USUARIO (optional) -->
                    <div class="user-panel mt-2 pb-2 mb-auto d-flex">
                        {# Foto de Perfil #}
                        <div class="image">
                            {% if app.user.foto %}
                                <img src="{{ asset('uploads/photo/' ~ app.user.foto) }}" class="img-circle elevation-2" width="150px">
                            {% else %}
                                <img src="{{ asset('img/profile/image_user.jpg') }}" class="img-circle elevation-2" width="150px">
                            {% endif %}
                        </div>
                        {# Cargo o tipo de Usuario #}
                        <div class="info">
                            <h5 class="text-wrap text-justify text-center brand-text">{{ app.user }}</h5>
                            {% if app.user.roles == ["ROLE_PLATAFORMA"] %}
                                <h6 class="d-block text-center">PLATAFORMA</h6>
                            {% elseif app.user.roles == ["ROLE_CONCILIADOR"] %}
                                <h6 class="d-block text-center">CONCILIADOR(A)</h6>
                            {% elseif app.user.roles == ["ROLE_DIRECTOR"] %}
                                <h6 class="d-block text-center">DIRECTOR(A)</h6>
                            {% elseif app.user.roles == ["ROLE_COMISION_TECNICA"] %}
                                <h6 class="d-block text-center">COMISION TECNICA</h6>
                            {% else %}
                                <h6 class="d-block text-center">ADMINISTRADOR</h6>
                            {% endif %}
                            {#<h6 class="d-block text-center">{{ app.user.roles | json_encode }}</h6>#}
                            <h6 class="d-block text-center text-wrap">{{ app.user.departamento }}</h6>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Agrega íconos a los enlaces usando la clase .nav-icon
                                 con font-awesome o cualquier otra libreria fuentes de iconos -->
                            {# Boton INICIO #}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('principal') }}">
                                    <i class="nav-icon fa fa-home" aria-hidden="true"></i>
                                    <p>INICIO</p>
                                </a>
                            </li>
                            {# CONCILIACION DE CASOS #}
                            <li class="nav-item">
                                <a class="nav-link" href="">
                                    <i class="nav-icon fa fa-inbox" aria-hidden="true"></i>
                                    <p>
                                        CONCILIACIONES
                                        <i class="fas fa-angle-left right"></i>
                                        {# <span class="right badge badge-danger right">7</span> #}
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('conciliacion_nuevo') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Registrar Caso</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('conciliacion_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Casos Conciliatorios</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            {# REPORTES ESTADISTICOS #}
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-bar-chart" aria-hidden="true" ></i>
                                    <p>
                                        REPORTES ESTADISTICOS
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Semestrales</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('reporte_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Reportes por Centro</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            {# GESTION DE USUARIOS #}
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-users" aria-hidden="true"></i>
                                    <p>
                                        GESTIÓN DE USUARIOS
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('usuario_new') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Acreditación</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('usuario_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Usuarios Registrados</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            {# GESTIÓN DE CENTROS #}
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-university" aria-hidden="true"></i>
                                    <p>
                                        GESTIÓN DE CENTROS
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('centro_nuevo') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Nueva Acreditación</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('centro_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Centros Registrados</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content
            Envoltorio de contenido. Contiene contenido de página-->
            <div class="content-wrapper bg-transparent">
                <!-- Content Header (Page header)
                 Encabezado de contenido (NOMBRE DEL CENTRO)-->
                <div class="content-header">
                    <div class="container-fluid row mb-2 text-right">
                        {# <div class="">  #}
                        <div class="col-sm-12">
                            <h2 class="m-0 font-weight-bold">{{ app.user.centro }}</h2>
                            {# <a href="{{ path('centro_detalle',{'id':usuario.centro}) }}"></a> #}
                        </div><!-- /.col -->
                        {# </div><!-- /.row --> #}
                    </div><!-- /.container-fluid -->
                </div> <!-- /.content-header -->

                <!-- MAIN CONTENT -->
                <section class="content">
                    <div class="container-fluid">
                        {% block body %}

                        {% endblock %}
                    </div> <!-- /.container-fluid -->
                </section> <!-- /.content -->
            </div> <!-- /.content-wrapper -->

            <!-- Main Footer -->
            <footer class="main-footer">
                <a>Desarrollado por Vladimir Calle</a>
                <strong>Copyright &copy; 2022.</strong>
                Todos los Derechos Reservados.
                <div class="float-right d-none d-sm-inline-block">
                    <b>Version</b> 1.0
                </div>
            </footer> <!-- /. Main Footer -->
        {# </div> #}
        <!-- ./wrapper -->
    </body>
</html>