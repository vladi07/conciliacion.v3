                </div>
                <br>
                <h3 class="fw-bold text-center font-weight-bold">Sistema de Conciliación</h3>
                {#LOGIN#}
                <br>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData,'security')}}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Usted esta logueado como: {{ app.user.username }}
                            <br>
                            <a href="{{ path('app_logout') }}" class="btn btn-danger">
                                Cerrar Sesión
                            </a>
                        </div>
                    {% endif %}

                    <h4 class="h3 mb-3 font-weight-normal text-center">Iniciar Sesión</h4>
                    <div class="mb-4">
                        <label for="inputUsername" class="form-label">Usuario</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                               class="form-control" autocomplete="username" required autofocus>
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="form-label">Contraseña</label>
                        <input type="password" name="password" id="inputPassword"
                               class="form-control" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <div class="text-center">
                        <button class="btn btn-primary btn-lg" type="submit">
                            Iniciar
                            <i class="bi bi-arrow-right-square"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
