{% extends 'base.html.twig' %}

{% block title %}
    Editar User|{{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="card card-warning card-outline">
            <div class="card-header">
                <h2 class="card-title">Editar datos del Usuario: <strong>{{ usuario }}</strong></h2>
                <div class="card-tools text-center btn-group">
                    {{ include('usuario/_delete_form.html.twig') }}
                    <a class="btn btn-primary ml-2" href="{{ path('usuario_index') }}">
                        <i class="bi bi-arrow-left-square"></i> Volver
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(formulario) }}
                    <div class="row">
                        <div class="col">
                            {{ form_row(formulario.username) }}
                            {{ form_row(formulario.nombres) }}
                            {{ form_row(formulario.tipo_documento) }}
                            {{ form_row(formulario.fecha_nacimiento) }}
                        </div>
                        <div class="col">
                            {{ form_row(formulario.password) }}
                            {{ form_row(formulario.primer_apellido) }}
                            {{ form_row(formulario.numero_documento) }}
                            {{ form_row(formulario.telefono) }}
                        </div>
                        <div class="col">
                            {{ form_row(formulario.roles) }}
                            {{ form_row(formulario.segundo_apellido) }}
                            {{ form_row(formulario.expedido) }}
                            {{ form_row(formulario.genero) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(formulario.domicilio) }}
                            {{ form_row(formulario.grado_academico) }}
                            {{ form_row(formulario.correo) }}
                            {{ form_row(formulario.centro) }}
                        </div>
                        <div class="col">
                            {{ form_row(formulario.departamento) }}
                            {{ form_row(formulario.profesion) }}
                            {{ form_row(formulario.foto) }}
                            {{ form_row(formulario.activo) }}
                        </div>
                    </div>
                    <button class="btn btn-success">
                        <i class="bi bi-bookmark-check"></i> Actualizar
                    </button>
                {{ form_end(formulario) }}
                {#
                {{ include('usuario/_form.html.twig', {'button_label': 'Actualizar'}) }}

                <a class="btn btn-primary" href="{{ path('usuario_index') }}">
                    <i class="bi bi-arrow-left-square"></i>
                    Volver
                </a>
                #}
            </div>
        </div>
    </div>
{% endblock %}
