{% extends 'base.html.twig' %}

{% block title %}
    Datos Usuario|{{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h1 class="card-title">Datos del Usuario: <strong>{{ usuario }}</strong></h1>
                <div class="card-tools">
                    <a class="btn btn-primary" href="{{ path('usuario_index') }}">
                        <i class="bi bi-arrow-left-square"></i>
                        Volver
                    </a>
                    <a class="btn btn-info" href="{{ path('usuario_edit', {'id': usuario.id}) }}">
                        <i class="bi bi-pencil-square"></i>
                        Editar
                    </a>

                    {{ include('usuario/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ usuario.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ usuario.username }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ usuario.roles ? usuario.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ usuario.password }}</td>
                    </tr>
                    <tr>
                        <th>Nombres</th>
                        <td>{{ usuario.nombres }}</td>
                    </tr>
                    <tr>
                        <th>Primer Apellido</th>
                        <td>{{ usuario.primerApellido }}</td>
                    </tr>
                    <tr>
                        <th>Segundo Apellido</th>
                        <td>{{ usuario.segundoApellido }}</td>
                    </tr>
                    <tr>
                        <th>Tipo de Documento</th>
                        <td>{{ usuario.tipoDocumento }}</td>
                    </tr>
                    <tr>
                        <th>Número del Documento</th>
                        <td>{{ usuario.numeroDocumento }}</td>
                    </tr>
                    <tr>
                        <th>Expedido en</th>
                        <td>{{ usuario.expedido }}</td>
                    </tr>
                    <tr>
                        <th>Dirección del Domicilio</th>
                        <td>{{ usuario.domicilio }}</td>
                    </tr>
                    <tr>
                        <th>Departamento</th>
                        <td>{{ usuario.departamento }}</td>
                    </tr>
                    <tr>
                        <th>Fecha de Nacimiento</th>
                        <td>{{ usuario.fechaNacimiento |date('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <th>Género</th>
                        <td>{{ usuario.genero }}</td>
                    </tr>
                    <tr>
                        <th>Grado de Instrucción Academica</th>
                        <td>{{ usuario.gradoAcademico }}</td>
                    </tr>
                    <tr>
                        <th>Profesión</th>
                        <td>{{ usuario.profesion }}</td>
                    </tr>
                    <tr>
                        <th>Teléfono o Celular de Contacto</th>
                        <td>{{ usuario.telefono }}</td>
                    </tr>
                    <tr>
                        <th>Correo Electronico</th>
                        <td>{{ usuario.correo }}</td>
                    </tr>
                    <tr>
                        <th>Foto</th>
                        <td>{{ usuario.foto }}</td>
                    </tr>
                    <tr>
                        <th>Fecha de Creación del Usuario</th>
                        <td>{{ usuario.fechaCreacion|date('d-m-Y H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Activo</th>
                        <td>{{ usuario.activo ? 'Si' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
