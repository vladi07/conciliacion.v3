{% extends 'base.html.twig' %}

{% block title %}
    Editar Conciliacion|{{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="card card-warning card-outline">
            <div class="card-header">
                <h2 class="card-title">Editar datos de la Conciliación: <strong>SCA N°{{ conciliacion.id }}/2022</strong></h2>
            </div>
            <div class="card-body">
                {{ form_start(formulario) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(formulario.idioma) }}
                        {{ form_row(formulario.materia) }}
                    </div>
                    <div class="col">
                        {{ form_row(formulario.tipo_conciliacion ) }}
                        {{ form_row(formulario.documento) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(formulario.descripcion) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(formulario.centro) }}
                    </div>
                    <div class="col">
                        {{ form_row(formulario.usuario) }}
                    </div>
                </div>

                <button class="btn btn-success">
                    <i class="bi bi-bookmark-check"></i> Actualizar
                </button>
                {{ form_end(formulario) }}
            </div>
        </div>
    </div>
{% endblock %}