{% extends 'base.html.twig' %}

{% block title %}
    Mis Casos|{{ parent() }}
{% endblock %}

{% block body %}
    <div class="card card-primary card-outline">
        <h2 class="card-header font-weight-bold">Mis Casos Conciliatorios</h2>
        <div class="card-body p-2">
            <div class="d-flex bd-highlight mb-1">
                <div class="p-1 bd-highlight">
                    <a class="btn btn-primary" href="{{ path('principal') }}">
                        <i class="bi bi-arrow-left-square"></i> Volver
                    </a>
                    <a class="btn btn-success" href="{{ path('conciliacion_nuevo') }}">
                        <i class="bi bi-plus-square"></i> Nuevo Caso Conciliatorio
                    </a>
                </div>
                <div class="ml-auto p-1 bd-highlight">
                    <a class="btn btn-warning" href="">
                        Nro. de Casos:
                    </a>
                </div>
            </div>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Solicitante</th>
                        <th>Registrado por</th>
                        <th>Fecha de Registro</th>
                        <th>Conciliador</th>
                        <th>Materia</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for casoConciliatorio in conciliaciones %}
                    <tr>
                        <td>{{ casoConciliatorio.id }}</td>
                        <td>{{ casoConciliatorio.addUsuarioExterno() }}</td>
                        <td>{{ casoConciliatorio.usuario }}</td>
                        <td>{{ casoConciliatorio.fecha|date('d-m-Y') }}</td>
                        <td>{{ casoConciliatorio.addUsuario() }}</td>
                        <td>{{ casoConciliatorio.materia }}</td>
                        <td>{{ casoConciliatorio.tipoConciliacion }}</td>
                        <td>{{ casoConciliatorio.estado }}</td>
                        <td>
                            <div class="text-center btn-group-sm">
                                <a class="btn btn-success btn-sm" href="{{ path('conciliacion_detalle',{'id':casoConciliatorio.id}) }}">
                                    <i class="bi bi-eye-fill"></i>Ver
                                </a>
                                <a class="btn btn-info btn-sm" href="{{ path('conciliacion_editar',{'id':casoConciliatorio.id}) }}">
                                    <i class="bi bi-pencil-square"></i>Editar
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">No se registraron Casos Conciliatorios asignado a este usuario</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            Footer del CARD
        </div>
    </div>
{% endblock %}
